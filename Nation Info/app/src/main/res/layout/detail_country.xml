<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/nationinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="20dp" />

    <TextView
        android:id="@+id/nationinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:text="NATION INFO"
        android:textSize="50dp" />

    <TextView

        android:id="@+id/textviewcountryname"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imglogo"
        android:layout_marginLeft="10dp"
        android:text="Name: "
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imglogo"
        android:layout_toRightOf="@id/textviewcountryname"
        android:text=""
        android:textSize="30dp"
        android:id="@+id/setname"/>
    <TextView

        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/Population"
        android:text="Population: "
        android:textSize="30dp"
        android:layout_below="@id/textviewcountryname"
        android:layout_marginLeft="10dp"
        />

    <TextView

        android:id="@+id/area"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Population"
        android:layout_marginLeft="10dp"
        android:text="Area: "
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setname"
        android:layout_toRightOf="@id/textviewcountryname"
        android:text=""
        android:textSize="30dp"
        android:id="@+id/setpopulation"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setpopulation"
        android:layout_toRightOf="@id/textviewcountryname"
        android:text=""
        android:textSize="30dp"
        android:id="@+id/setarea"/>
    <TextView

        android:id="@+id/map"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/area"
        android:layout_marginLeft="10dp"
        android:text="Map: "
        android:textSize="30dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@id/map"
        android:layout_marginTop="50dp"
        android:id="@+id/setmap"/>





</RelativeLayout>